# Environment Configuration
# Copy this file to .env and update with your actual values

# Application Environment
NODE_ENV=development
# Options: development, production, staging

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nagarparishad_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=24h

# Encryption (Optional)
ENABLE_ENCRYPTION=false
# Set to true if you want to enable request/response encryption

# CORS Configuration (for production)
ALLOWED_ORIGINS=https://kaamlo.com,https://www.kaamlo.com,https://api.kaamlo.com

# Production Settings
# Uncomment and configure for production
# LOG_LEVEL=info
# MAX_REQUEST_SIZE=10mb
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# SSL/TLS (if using HTTPS)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Database Connection Pool (Production)
# DB_POOL_MIN=2
# DB_POOL_MAX=10
# DB_POOL_IDLE_TIMEOUT=30000

# Session Configuration (if using sessions)
# SESSION_SECRET=your_session_secret_here
# SESSION_MAX_AGE=86400000

# Email Configuration (if using email)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_email_password
# SMTP_FROM=noreply@nagarparishad.com

# File Upload (if using file uploads)
# UPLOAD_MAX_SIZE=10485760
# UPLOAD_DIR=./uploads

# Monitoring (Production)
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_newrelic_key

# API Keys (if using external services)
# GOOGLE_TRANSLATE_API_KEY=your_google_translate_key
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret

