# Production Environment Configuration
# Copy this file to .env.production and update with your production values
# DO NOT commit .env.production to version control!

# Application Environment
NODE_ENV=production

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Database Configuration (Production)
DB_HOST=your_production_db_host
DB_PORT=5432
DB_NAME=nagarparishad_db
DB_USER=your_production_db_user
DB_PASSWORD=your_strong_production_password

# JWT Configuration (Use strong secret in production!)
JWT_SECRET=CHANGE_THIS_TO_A_VERY_STRONG_RANDOM_SECRET_IN_PRODUCTION
JWT_EXPIRES_IN=24h

# Encryption
ENABLE_ENCRYPTION=false

# CORS Configuration (Production - restrict to your domains)
ALLOWED_ORIGINS=https://kaamlo.com,https://www.kaamlo.com,https://api.kaamlo.com

# Production Settings
LOG_LEVEL=info
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Connection Pool (Production - optimize for your load)
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# SSL/TLS (if using HTTPS)
# SSL_CERT_PATH=/etc/ssl/certs/cert.pem
# SSL_KEY_PATH=/etc/ssl/private/key.pem

# Monitoring (Production)
# SENTRY_DSN=your_production_sentry_dsn
# NEW_RELIC_LICENSE_KEY=your_production_newrelic_key

# Backup Configuration
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30

# Security
# TRUST_PROXY=true
# HELMET_ENABLED=true

